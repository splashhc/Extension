{
  "name": "Factify",
  "description": "Relevant contextual facts, right to your browser!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "scripting", "storage", "notifications", "webNavigation"],
  "host_permissions": ["https://www.google.com/*", "https://www.bing.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}